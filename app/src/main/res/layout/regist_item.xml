            <com.zhy.autolayout.AutoLinearLayout
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/log_logo2"
                    android:paddingLeft="227px"
                    android:paddingRight="227px"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="925px">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="33px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:gravity="left"
                            android:text="注册"
                            android:textSize="56px"
                            android:textColor="@color/home_gray"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/goLog"
                            android:gravity="right"
                            android:text="登录"
                            android:textSize="56px"
                            android:textColor="@color/main_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        style="@style/RegistLinear"
                        android:id="@+id/rl1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <View
                            android:layout_gravity="center"
                            android:background="@drawable/reg_phone"
                            android:layout_width="30px"
                            android:layout_height="54px"/>
                    <EditText
                            android:id="@+id/regPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="手机号"
                            android:inputType="phone"
                            android:layout_marginLeft="31px"
                            style="@style/RegistEdit"/>
                </LinearLayout>
                <View
                        android:background="@color/reg_tit"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:id="@+id/rl2"
                                style="@style/RegistLinear"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <View
                                    android:layout_gravity="center"
                                    android:background="@drawable/verify_code"
                                    android:layout_width="44px"
                                    android:layout_height="49px"/>
                            <EditText
                                    android:id="@+id/yzCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="验证码"
                                    android:inputType="number"
                                    android:layout_marginLeft="24px"
                                    style="@style/RegistEdit"/>
                        </LinearLayout>
                        <View
                                android:background="@color/reg_tit"
                                android:layout_width="match_parent"
                                android:layout_height="1px"/>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/goVerifyCode"
                            android:layout_gravity="center"
                            android:background="@drawable/rig_go_but"
                            android:paddingTop="23px"
                            android:paddingBottom="23px"
                            android:paddingLeft="36px"
                            android:paddingRight="36px"
                            android:gravity="center"
                            android:textColor="@color/label_color"
                            android:textSize="36px"
                            android:text="获取验证码"
                            android:layout_marginLeft="42px"
                            android:layout_width="275px"
                            android:layout_height="95px"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/rl3"
                        style="@style/RegistLinear"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <View
                            android:layout_gravity="center"
                            android:background="@drawable/pw_code"
                            android:layout_width="41px"
                            android:layout_height="48px"/>
                    <EditText
                            android:id="@+id/regPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="请输入密码"
                            android:inputType="textPassword"
                            android:layout_marginLeft="24px"
                            style="@style/RegistEdit"/>
                </LinearLayout>
                <View
                        android:background="@color/reg_tit"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>
                <LinearLayout
                        android:id="@+id/rl4"
                        style="@style/RegistLinear"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <View
                            android:layout_gravity="center"
                            android:background="@drawable/invite_code"
                            android:layout_width="44px"
                            android:layout_height="35px"/>
                    <EditText
                            android:id="@+id/regInviteCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="请输入邀请码（非必填）"
                            android:inputType="text"
                            android:layout_marginLeft="24px"
                            style="@style/RegistEdit"/>
                </LinearLayout>
                <View
                        android:background="@color/reg_tit"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>
                <TextView
                        android:id="@+id/registBut"
                        android:layout_marginTop="111px"
                        android:paddingTop="43px"
                        android:paddingBottom="42px"
                        android:gravity="center"
                        android:textSize="48px"
                        android:text="立即注册"
                        android:background="@drawable/rig_text"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_below="@+id/L3"
                        android:layout_marginTop="20dp"
                        android:id="@+id/mRCheckBox"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/mRCheckBoxX"
                            android:layout_width="36px"
                            android:layout_height="36px"
                            android:background="@drawable/is_sel"
                    />
                    <TextView
                            android:id="@+id/userAgreements"
                            android:layout_marginLeft="20px"
                            android:text="同意用户注册协议"
                            android:textColor="@color/txt_black_center"
                            android:textSize="36px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <!--<RelativeLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_marginBottom="40px"-->
                        <!--android:layout_height="wrap_content">-->
                    <!--<View-->
                            <!--android:layout_alignParentBottom="true"-->
                            <!--android:layout_centerHorizontal="true"-->
                            <!--android:background="@drawable/rig_bot"-->
                            <!--android:layout_width="298px"-->
                            <!--android:layout_height="13px"/>-->
                <!--</RelativeLayout>-->
            </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoFrameLayout>