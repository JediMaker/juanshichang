<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragment.ShopListFragment">
    <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/shopbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="45px"
            android:paddingRight="45px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35px"
    >
        <!--ff_ret-->
        <View
                android:visibility="invisible"
                android:id="@+id/realRet"
                android:layout_width="63px"
                android:layout_height="43px"
                android:layout_centerVertical="true"
                android:background="@drawable/ff_ret"/>

        <TextView
                android:id="@+id/shopTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/main_text"
                android:textSize="54px"
                android:text="购物车"
        />
        <TextView
                android:id="@+id/shopRig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/main_text"
                android:textSize="48px"
                android:text="编辑"
        />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
            android:id="@+id/backView"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/ff_back"
            app:layout_constraintTop_toBottomOf="@+id/shopbar"/>
    <ExpandableListView
            android:id="@+id/goodsList"
            android:divider="@null"
            android:groupIndicator="@null"
            android:layout_marginBottom="52dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@+id/backView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1">
    </ExpandableListView>
    <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/shopBotBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/llSelectAll"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1.68"
                android:layout_height="match_parent">
            <CheckBox
                    android:id="@+id/allCheck"
                    android:button="@drawable/shoppingcar_check"
                    android:paddingHorizontal="25px"
                    android:layout_marginLeft="24px"
                    android:text="合计 :"
                    android:textSize="48px"
                    android:textColor="@color/main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:visibility="gone"
                    android:text="¥"
                    android:textSize="56px"
                    android:textColor="@color/indicatorRed"
                    android:layout_marginLeft="5px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/nowPrice"
                    android:text="¥0.00"
                    android:textSize="72px"
                    android:textColor="@color/indicatorRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
                android:id="@+id/goPayment"
                android:text="去结算"
                android:gravity="center"
                android:textSize="48px"
                android:textColor="@color/white"
                android:background="@color/indicatorRed"
                android:paddingTop="26px"
                android:paddingBottom="26px"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
    </com.zhy.autolayout.AutoLinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>