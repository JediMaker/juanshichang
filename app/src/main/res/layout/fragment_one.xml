<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.OneFragment">
    <ImageView
            android:src="@drawable/mback"
            android:layout_width="match_parent"
            android:layout_height="540px"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:background="@color/colorPrimary"
        >
            <!--返回-->
            <View
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
            />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="102px"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_index_serch"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
            >
                <TextView
                        android:id="@+id/etsearch"
                        android:layout_width="810px"
                        android:layout_height="100px"
                        android:gravity="center_vertical"
                        android:text="粘贴宝贝标题，先领劵再购物"
                        android:paddingLeft="93px"
                        android:textSize="36px"/>

                <ImageView
                        android:layout_width="48px"
                        android:layout_height="48px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35px"
                        android:src="@drawable/ic_shop_search"/>

            </RelativeLayout>

            <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:padding="9dp"
                    android:layout_marginRight="5dp"
            />


        </RelativeLayout>
        <com.youth.banner.Banner
                android:visibility="visible"
                android:id="@+id/main_banner"
                android:layout_marginTop="30px"
                android:layout_marginLeft="48px"
                android:layout_marginRight="48px"
                app:image_scale_type="fit_xy"
                app:indicator_drawable_selected="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="468px">
        </com.youth.banner.Banner>
        <GridView
                android:id="@+id/main_gridView"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:gravity="center"
                android:verticalSpacing="39px"
                android:scrollbars="none"
                android:columnWidth="80dp"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </GridView>
        <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="26sp"
                android:textColor="@android:color/holo_red_dark"
                android:text="首页"/>

    </LinearLayout>
</com.zhy.autolayout.AutoFrameLayout>