<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="125px"
        android:paddingRight="125px"
        tools:context=".activity.RegisterActivity">
    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:textSize="80px"
            android:text="劵市场注册"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_below="@id/title"
            android:id="@+id/L1"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginTop="20px"
            android:background="@drawable/bg_login_white">

        <ImageView
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="46px"
                android:background="@drawable/set_user"/>

        <EditText
                android:id="@+id/mRegPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40px"
                android:background="@null"
                android:hint="请输入手机号"
                android:digits="1234567890"
                android:inputType="phone|number"
                android:textColor="#ccc"
                android:textSize="40px"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/L2"
            android:layout_below="@+id/L1"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginTop="50px"
            android:background="@drawable/bg_login_white">

        <ImageView
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="46px"
                android:background="@drawable/i_reg_code"/>

        <EditText
                android:id="@+id/mRegpass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40px"
                android:background="@null"
                android:hint="输入至少6位登录密码"
                android:inputType="textPassword"
                android:textColor="#ccc"
                android:textSize="40px"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/L3"
            android:layout_below="@+id/L2"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginTop="50px"
            android:background="@drawable/bg_login_white">

        <ImageView
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="46px"
                android:background="@drawable/i_reg_code"/>

        <EditText
                android:id="@+id/mRegpass2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40px"
                android:background="@null"
                android:hint="确认你输入的登录密码"
                android:inputType="textPassword"
                android:textColor="#ccc"
                android:textSize="40px"/>
    </LinearLayout>
    <LinearLayout
            android:layout_below="@+id/L3"
            android:layout_marginTop="20dp"
            android:id="@+id/mRCheckBox"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/mRCheckBoxT"
                android:layout_width="46px"
                android:layout_height="46px"
                android:background="@drawable/i_reg_hassele"
        />
        <TextView
                android:id="@+id/userAgreement"
                android:layout_marginLeft="20px"
                android:text="已阅读并同意用户协议"
                android:textColor="@color/txt_black_center"
                android:textSize="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
            android:layout_below="@+id/mRCheckBox"
            android:id="@+id/registerBut"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="125px"
            android:layout_marginRight="125px"
            android:layout_marginTop="55px"
            android:gravity="center"
            android:textSize="40px"
            android:background="@drawable/bg_gray"
            android:text="一键注册"
    />
</com.zhy.autolayout.AutoRelativeLayout>