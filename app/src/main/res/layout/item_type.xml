<?xml version="1.0" encoding="utf-8"?><!--首页-->
<com.zhy.autolayout.AutoLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:orientation="vertical"
        android:id="@+id/mTypeLayout"
        android:layout_marginBottom="30px"
        android:paddingBottom="20px"
        android:background="@color/white"
        android:gravity="center_horizontal">

    <!--<LinearLayout-->
    <!--android:id="@+id/mTypeLayout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginBottom="30px"-->
    <!--android:gravity="center_horizontal"-->
    <!--android:orientation="vertical">-->


    <ImageView
            android:id="@+id/mTypeImg"
            android:layout_width="482px"
            android:layout_height="482px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:scaleType="fitXY"/>
    <!-- android:scaleType="fitCenter"-->
    <TextView
            android:id="@+id/mTypeIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="24px"
            android:textColor="@color/txt_hei"
            android:textSize="40px"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="30px"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/mTypeNumTv"
                tools:text="价格"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:textColor="@color/colorPrimary"
                android:textSize="40px"/>

        <com.example.juanshichang.widget.PriceTextView
                android:id="@+id/mTypeNumTvs"
                tools:text="原价"
                android:layout_marginTop="32px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_toRightOf="@+id/mTypeNumTv"
                android:textColor="@color/txt_gray"
                android:textSize="32px"/>
        <TextView
                android:id="@+id/mTypeZiYing"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:layout_marginTop="24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_red_ziying"
                android:paddingBottom="8px"
                android:paddingLeft="25px"
                android:paddingRight="25px"
                android:paddingTop="8px"
                android:text="10元劵"
                android:textColor="@color/white"
                android:textSize="30px"/>
    </RelativeLayout>
    <!--</LinearLayout>-->
</com.zhy.autolayout.AutoLinearLayout>

