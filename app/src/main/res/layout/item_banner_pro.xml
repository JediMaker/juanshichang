<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUIFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          xmlns:tools="http://schemas.android.com/tools"
                                          xmlns:app="http://schemas.android.com/apk/res-auto"
                                          android:orientation="vertical"
                                          android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:layout_marginLeft="10px"
                                          android:layout_marginRight="10px"
                                          android:paddingBottom="20px"
                                          android:background="@drawable/main_recycler_item_two"
                                          android:id="@+id/mTypeLayout"
                                          android:layout_marginBottom="30px"
                                          android:gravity="center_horizontal">
    <!--<com.zhy.autolayout.AutoLinearLayout-->
            <!--android:orientation="vertical"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
        <!--<ImageView
                android:id="@+id/mTypeImg"
                android:layout_width="482px"
                android:layout_height="482px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:scaleType="fitXY"/>-->
        <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.example.juanshichang.widget.TopRoundedImageView
                    android:id="@+id/left_iv"
                    android:layout_marginTop="2px"
                    android:layout_marginLeft="2px"
                    android:layout_marginRight="2px"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="396px"/>
            <TextView
                    android:id="@+id/left_tv_title"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_below="@+id/left_iv"
                    android:paddingTop="25px"
                    android:paddingBottom="4px"
                    android:paddingLeft="19px"
                    tools:text="巴黎欧兰雅"
                    android:textSize="36px"
                    android:textColor="@color/txt_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/left_left_label"
                    android:layout_below="@+id/left_tv_title"
                    android:textColor="@color/label_color"
                    tools:text="拼多多"
                    android:textSize="20px"
                    android:layout_marginTop="4px"
                    android:paddingTop="1px"
                    android:paddingBottom="1px"
                    android:paddingLeft="7px"
                    android:layout_marginLeft="19px"
                    android:paddingRight="7px"
                    android:background="@drawable/item_recycler_main_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/left_right_label"
                    android:layout_below="@+id/left_tv_title"
                    android:layout_marginLeft="10px"
                    android:layout_toRightOf="@+id/left_left_label"
                    android:textColor="@color/label_color"
                    android:background="@drawable/item_recycler_main_label"
                    tools:text="预估收益"
                    android:textSize="20px"
                    android:layout_marginTop="4px"
                    android:paddingTop="1px"
                    android:paddingBottom="1px"
                    android:paddingLeft="7px"
                    android:paddingRight="7px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <!--这是隐藏的-->
            <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/left_left_label2"
                    android:layout_below="@+id/left_left_label"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal"
                    android:layout_marginLeft="19px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/left_volume"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="16px"
                        android:textColor="@color/home_gray"
                        tools:text="销量1321"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/left_promotion_rate"
                        android:textSize="16px"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="20px"
                        android:paddingRight="8px"
                        android:paddingLeft="9px"
                        android:paddingTop="4px"
                        android:paddingBottom="4px"
                        android:background="@drawable/item_recycler_home_earnings"
                        tools:text="预估收益1.12元"
                        android:textColor="@color/home_gray2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/left_linear"
                    android:layout_below="@+id/left_left_label2"
                    android:paddingTop="5px"
                    android:layout_marginLeft="19px"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="¥"
                        android:textSize="24px"
                        android:textColor="@color/label_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/left_price"
                        android:textStyle="bold"
                        tools:text="520.23"
                        android:textSize="48px"
                        android:textColor="@color/label_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.example.juanshichang.widget.PriceTextView
                    android:id="@+id/left_mTypeNumTvs"
                    tools:text="原价"
                    android:layout_marginLeft="19px"
                    android:layout_marginBottom="8px"
                    android:layout_alignBottom="@+id/left_linear"
                    android:layout_toRightOf="@+id/left_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_gray"
                    android:textSize="24px"/>
            <LinearLayout
                    android:id="@+id/left_juan"
                    android:layout_alignBottom="@+id/left_linear"
                    android:layout_marginBottom="8px"
                    android:layout_marginRight="21px"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:paddingTop="4px"
                    android:paddingBottom="4px"
                    android:background="@drawable/item_recycler_left_juan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/left_name"
                        android:paddingLeft="8px"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:text="劵"
                        android:textSize="28px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <View
                        android:layout_gravity="center"
                        android:background="@drawable/line_vertical"
                        android:layout_width="8dp"
                        android:layout_height="match_parent"/>
                <TextView
                        android:id="@+id/left_juan_price"
                        android:paddingRight="8px"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        tools:text="80元"
                        android:textSize="28px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    <!--</com.zhy.autolayout.AutoLinearLayout>-->
</com.qmuiteam.qmui.layout.QMUIFrameLayout>