<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/xRelative"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/bg_site_list"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="张" />
    </RelativeLayout>

    <TextView
            android:id="@+id/siteName"
            tools:text="张三丰"
            android:layout_marginTop="16.3dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toRightOf="@+id/xRelative"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/main_text"
            android:textSize="16sp" />

    <TextView
            android:id="@+id/sitePhone"
            tools:text="17601619521"
            android:layout_marginTop="20.6dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toRightOf="@+id/siteName"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/txt_gray"
            android:textSize="12sp" />
    <TextView
            android:id="@+id/siteEdit"
            android:paddingLeft="14.6dp"
            android:paddingRight="16dp"
            android:text="编辑"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="12sp"
            android:textColor="@color/txt_gray"
            android:layout_width="wrap_content"
            app:layout_constraintVertical_weight="1"
            android:layout_height="0dp"/>
    <View
            android:id="@+id/siteL"
            app:layout_constraintRight_toLeftOf="@+id/siteEdit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/set_linear"
            android:layout_width="2px"
            android:layout_height="20dp"/>
    <TextView
            android:id="@+id/siteDet"
            tools:text="河南省 郑州市 金水区 龙子湖正商木华广场3号楼b座1715"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="13.3dp"
            app:layout_constraintLeft_toRightOf="@+id/xRelative"
            app:layout_constraintTop_toBottomOf="@+id/siteName"
            app:layout_constraintRight_toLeftOf="@+id/siteL"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/main_text"
            android:textSize="16sp" />
</androidx.constraintlayout.widget.ConstraintLayout>