<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.NewClassifyActivity">
    <include
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/newcTop"
            android:visibility="visible"
            layout="@layout/main_searchbox_two"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newcTop"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/mNSwipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <com.zhy.autolayout.AutoLinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.example.juanshichang.widget.MyRefreshListView
                    android:id="@+id/mList"
                    android:scrollbars="none"
                    android:background="@color/ff_back"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mRecycler"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3"
                    android:background="@color/white"
                    android:scrollbars="none"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>