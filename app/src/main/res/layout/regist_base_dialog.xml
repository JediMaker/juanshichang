<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.autolayout.AutoRelativeLayout
                android:background="@drawable/dialog"
                android:layout_width="706px"
                android:layout_height="370px">
                <TextView
                        android:id="@+id/titleDialog"
                        android:layout_marginTop="45px"
                        android:layout_centerHorizontal="true"
                        tools:text="温馨提示"
                        android:textSize="54px"
                        android:textColor="@color/reg_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/contentDialog"
                    android:layout_marginTop="4px"
                    android:layout_below="@+id/titleDialog"
                    android:layout_centerHorizontal="true"
                    tools:text="请输入正确的手机号码"
                    android:textSize="35px"
                    android:textColor="@color/reg_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:id="@+id/lld"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="134px">
                <TextView
                        android:id="@+id/cancelReg"
                        android:gravity="center"
                        tools:text="取消"
                        android:textSize="46px"
                        android:textColor="@color/reg_dialog_but"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                <View
                        android:id="@+id/centerLinear"
                        android:layout_gravity="center"
                        android:background="#BEBEBE"
                        android:layout_width="1px"
                        android:layout_height="50px"/>
                <TextView
                        android:id="@+id/sureReg"
                        android:gravity="center"
                        tools:text="确定"
                        android:textSize="46px"
                        android:textColor="@color/reg_dialog_but"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <View
                    android:background="#BEBEBE"
                    android:layout_alignTop="@+id/lld"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>