<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.GuideActivity">

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/guideVp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    <FrameLayout
            android:visibility="gone"
            android:id="@+id/guideFl"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20px"
            android:layout_marginRight="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/ty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/splash_but"
                android:paddingLeft="70px"
                android:paddingTop="16px"
                android:paddingRight="70px"
                android:paddingBottom="16px"
                android:text="立即体验"
                android:textColor="@color/main_text"
                android:textSize="18sp"
                android:visibility="visible" />
    </FrameLayout>
    <RadioGroup
            android:id="@+id/rg"
            android:layout_marginBottom="150px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
                android:id="@+id/v1"
                android:checked="true"
                android:button="@null"
                android:textColor="@android:color/transparent"
                android:background="@drawable/guide_indicator"
                android:layout_width="21px"
                android:layout_height="21px"/>
        <RadioButton
                android:id="@+id/v2"
                android:layout_marginLeft="36px"
                android:button="@null"
                android:textColor="@android:color/transparent"
                android:background="@drawable/guide_indicator"
                android:layout_width="21px"
                android:layout_height="21px"/>
        <RadioButton
                android:id="@+id/v3"
                android:layout_marginLeft="36px"
                android:button="@null"
                android:textColor="@android:color/transparent"
                android:background="@drawable/guide_indicator"
                android:layout_width="21px"
                android:layout_height="21px"/>
    </RadioGroup>
</com.zhy.autolayout.AutoRelativeLayout>