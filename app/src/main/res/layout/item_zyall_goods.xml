<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_recycler_item_two"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
<!--    android:scaleType="fitXY"-->
    <com.example.juanshichang.widget.TopRoundedImageView
            android:id="@+id/zyIv"
            android:layout_width="@dimen/dp_165"
            android:layout_height="@dimen/dp_165"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:scaleType="fitCenter"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/zyTitle"
            app:layout_constraintTop_toBottomOf="@+id/zyIv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingTop="8dp"
            android:paddingBottom="1.3dp"
            android:paddingLeft="6dp"
            tools:text="巴黎欧兰雅"
            android:textSize="@dimen/sp_txt_nomal"
            android:textColor="@color/txt_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/zyPrice"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zyTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="6.6dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            tools:text="520.23"
            android:textSize="@dimen/sp_txt_nomal"
            android:textColor="@color/label_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>