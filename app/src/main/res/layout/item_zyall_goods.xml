<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_recycler_item_two"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <com.example.juanshichang.widget.TopRoundedImageView
            android:id="@+id/zyIv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="2px"
            android:layout_marginLeft="2px"
            android:layout_marginRight="2px"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="504px"/>
    <TextView
            android:id="@+id/zyTitle"
            app:layout_constraintTop_toBottomOf="@+id/zyIv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingTop="25px"
            android:paddingBottom="4px"
            android:paddingLeft="19px"
            tools:text="巴黎欧兰雅"
            android:textSize="36px"
            android:textColor="@color/txt_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/zyPrice"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zyTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="6.6dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            tools:text="520.23"
            android:textSize="48px"
            android:textColor="@color/label_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>