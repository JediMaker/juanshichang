<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/bg_newzy_home"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/topHL"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/topHImg"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4.3dp"
                    android:src="@drawable/index_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/topHTit"
                    tools:text="热销商品"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/main_text"
                    android:textSize="@dimen/sp_txt_title_icon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/topHMore"
                    android:paddingRight="8dp"
                    android:text="更多>>"
                    android:textSize="@dimen/sp_txt_annotateTextSize"
                    android:textColor="@color/txt_gray"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/botGrid"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                android:layout_marginBottom="1000dp"
                app:layout_constraintTop_toBottomOf="@+id/topHL"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>