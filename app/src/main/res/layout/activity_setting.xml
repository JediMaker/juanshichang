<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/ff_back"
        tools:context=".activity.SettingActivity">
    <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/reSet"
            android:background="@color/white"
            android:paddingTop="40px"
            android:paddingLeft="45px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <!--android:layout_marginLeft="49px"-->
        <!--ff_ret-->
        <View
                android:id="@+id/setRet"
                android:background="@drawable/ff_ret"
                android:layout_alignBottom="@+id/ffTitle"
                android:layout_marginBottom="15px"
                android:layout_width="63px"
                android:layout_height="43px"/>
        <TextView
                android:id="@+id/setsTitle"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="设置"
                android:textSize="52px"
                android:textColor="@color/main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <LinearLayout
            android:id="@+id/setUserImage"
            android:background="@color/white"
            android:paddingTop="125px"
            android:paddingBottom="65px"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/userImage"
                android:layout_gravity="center"
                app:qmui_is_circle="true"
                android:src="@drawable/head_img_def"
                android:layout_width="173px"
                android:layout_height="173px"/>
        <TextView
                android:text="点击修改头像"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:textColor="@color/txt_gray"
                android:textSize="35px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
            android:layout_marginLeft="46px"
            android:layout_marginRight="46px"
            android:background="@color/set_linear"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    <RelativeLayout
            android:paddingLeft="46px"
            android:paddingRight="46px"
            android:paddingTop="23px"
            android:paddingBottom="21px"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                    android:text="昵称"
                    android:textColor="@color/ff_gray"
                    android:textSize="35px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_alignParentRight="true"
                    android:text="修改"
                    android:drawablePadding="29px"
                    android:textColor="@color/txt_gray"
                    android:textSize="35px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
            android:layout_marginLeft="46px"
            android:layout_marginRight="46px"
            android:background="@color/set_linear"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    <RelativeLayout
            android:paddingLeft="46px"
            android:paddingRight="46px"
            android:paddingTop="23px"
            android:paddingBottom="21px"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="注册时间"
                android:textColor="@color/ff_gray"
                android:textSize="35px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_alignParentRight="true"
                tools:text="2020-12-30"
                android:drawablePadding="29px"
                android:textColor="@color/txt_gray"
                android:textSize="35px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
            android:id="@+id/unlogin"
            android:text="退出登录"
            android:layout_marginTop="29px"
            android:paddingTop="10px"
            android:paddingBottom="15px"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/ff_gray"
            android:textSize="46px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</com.zhy.autolayout.AutoLinearLayout>