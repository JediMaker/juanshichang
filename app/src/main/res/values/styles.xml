<resources>

    <!-- Base application theme. -->
    <!--Theme.AppCompat.Light.NoActionBar-->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--避免了启动App的白屏问题 甩锅 Are you Ok?-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--加载圈所用-->
    <style name="LoadingProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--加载圈所用-->
    <!--首页 TabLayout -->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
        <!--<item name="android:textColor"></item>-->
    </style>
    <!--注册用style-->
    <style name="RegistLinear">
        <item name="android:layout_marginTop">33px</item>
        <item name="android:layout_marginBottom">13px</item>
    </style>
    <style name="RegistEdit" parent="EditText">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textColorHint">@color/reg_tit</item>
        <item name="android:textSize">48px</item>
        <item name="android:background">@null</item>
    </style>
    <!--我的收益 TextView-->
    <style name="EarningText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">35px</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:paddingTop">40px</item>
        <item name="android:paddingBottom">50px</item>
    </style>
    <!--使用此style的前提是 父布局为RelativeLayout-->
    <style name="NotitleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">46px</item>
        <item name="android:paddingRight">46px</item>
        <item name="android:paddingTop">23px</item>
        <item name="android:paddingBottom">21px</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawableRight">@drawable/details_next</item>
    </style>
    <!--订单页面专用-->
    <style name="OrderTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">40px</item>
        <!--<item name="android:textColor"></item>-->
    </style>
    <!--Dialog样式规格弹框动画-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!--规格弹框动画-->
    <style name="mystyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="EditText" parent="EditText.Compat"/>
</resources>
