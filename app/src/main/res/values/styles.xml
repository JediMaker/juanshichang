<resources>

    <!-- Base application theme. -->
    <!--Theme.AppCompat.Light.NoActionBar-->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--避免了启动App的白屏问题 甩锅 Are you Ok?-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--加载圈所用-->
    <style name="LoadingProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--加载圈所用-->
    <!--首页 TabLayout -->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
        <!--<item name="android:textColor"></item>-->
    </style>
    <!--注册用style-->
    <style name="RegistLinear">
        <item name="android:layout_marginTop">33px</item>
        <item name="android:layout_marginBottom">13px</item>
    </style>
    <style name="RegistEdit" parent="EditText">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textColorHint">@color/reg_tit</item>
        <item name="android:textSize">48px</item>
        <item name="android:background">@null</item>
    </style>
</resources>
